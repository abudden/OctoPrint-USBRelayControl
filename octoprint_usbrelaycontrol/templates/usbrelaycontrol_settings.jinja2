<form class="form-horizontal">
    <h3>Configuration</h3>
    <div class="row-fluid">
        <div class="span2"><h4>Icon</h4></div>
        <div class="span3"><h4>Label</h4></div>
        <div class="span6"><h4>USB Relay</h4></div>
    </div>

    <div data-bind="foreach: usbrelayConfigurations">
        <div class="row-fluid usbrelaycontrol-settings-row">
            <div class="span2">
                <div class="input-prepend">
                    <span class="add-on"><i class="iconpicker-component"></i></span>
                    <input class="iconpicker span10" type="text" data-bind="value: icon, valueUpdate: 'iconpickerSelected'"/>
                </div>
            </div>
            <div class="span3">
                <input class="span12" type="text" data-bind="value: name"/>
            </div>
            <div class="span6">
                <div class="input-prepend span4">
                    <span class="add-on span7">Vendor ID</span>
                    <input class="span5" type="text" data-bind="value: vendor"/>
                </div>
                <div class="input-prepend span4">
                    <span class="add-on span7">Product ID</span>
                    <input class="span5" type="text" data-bind="value: product"/>
                </div>
                <br>
                <div class="input-prepend span4">
                    <span class="add-on span7">Relay No.</span>
                    <input class="span5" type="number" data-bind="value: relaynumber"/>
                </div>
                <br>
                <div class="input-prepend span4">
                    <span class="add-on span6">Active</span>
                    <select class="btn-group span6" data-bind="value: active_mode">
                        <option value="active_low">LOW</option>
                        <option value="active_high">HIGH</option>
                    </select>
                </div>
                <div class="input-prepend span4">
                    <span class="add-on span6">Default</span>
                    <select class="btn-group span6" data-bind="value: default_state">
                        <option value="default_off">OFF</option>
                        <option value="default_on">ON</option>
                    </select>
                </div>
            </div>
            <div class="span1">
                <a title="Remove USB Relay Configuration" class="btn btn-danger" data-bind="click: $parent.removeUSBRelayConfiguration">
                    <i class="icon-trash"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="offset11 span1">
            <a title="Add USB Relay Configuration" class="btn btn-primary" data-bind="click: addUSBRelayConfiguration">
                <i class="icon-plus"></i>
            </a>
        </div>
    </div>
</form>
